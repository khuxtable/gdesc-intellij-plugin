<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
	<id>org.kathrynhuxtable.gdesc.gdesc-plugin</id>

	<name>GDescPlugin</name>

	<version>1.0</version>

	<vendor url="https://kathrynhuxtable.org">Kathryn Huxtable</vendor>

	<description><![CDATA[
        Style for editing GDesc files for game descriptions.
    ]]></description>

	<!-- Product and plugin compatibility requirements.
		 Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
	<depends>com.intellij.java</depends>

	<extensions defaultExtensionNs="com.intellij">
		<fileType
				name="GDesc File"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescFileType"
				fieldName="INSTANCE"
				language="GDesc"
				extensions="gdesc"/>
		<lang.parserDefinition
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescParserDefinition"/>
		<lang.ast.factory
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescASTFactory"/>
<!--
		<externalAnnotator
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescExternalAnnotator"/>
-->
		<lang.syntaxHighlighterFactory
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescSyntaxHighlighterFactory"/>
		<colorSettingsPage
				implementation="org.kathrynhuxtable.gdesc.gdescplugin.GDescColorSettingsPage"/>
<!--
		<annotator
				language="JAVA"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescAnnotator"/>
-->
<!--
		<completion.contributor
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescCompletionContributor"/>
-->
<!--
		<psi.referenceContributor
				language="GDesc"
				implementation="org.kathrynhuxtable.gdesc.gdescplugin.GDescReferenceContributor"/>
-->
<!--
		<lang.refactoringSupport
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescRefactoringSupportProvider"/>
-->
		<lang.findUsagesProvider
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescFindUsagesProvider"/>
<!--
		<lang.foldingBuilder
				language="JAVA"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescFoldingBuilder"/>
-->
<!--
		<gotoSymbolContributor
				implementation="org.kathrynhuxtable.gdesc.gdescplugin.GDescChooseByNameContributor"/>
-->
		<lang.psiStructureViewFactory
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.structview.GDescStructureViewFactory"/>
		<navbar implementation="org.kathrynhuxtable.gdesc.gdescplugin.GDescStructureAwareNavbar"/>
<!--
		<lang.formatter
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescFormattingModelBuilder"/>
		<codeStyleSettingsProvider
				implementation="org.kathrynhuxtable.gdesc.gdescplugin.GDescCodeStyleSettingsProvider"/>
		<langCodeStyleSettingsProvider
				implementation="org.kathrynhuxtable.gdesc.gdescplugin.GDescLanguageCodeStyleSettingsProvider"/>
-->
		<lang.commenter
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescCommenter"/>
<!--
		<lang.documentationProvider
				language="GDesc"
				implementationClass="org.kathrynhuxtable.gdesc.gdescplugin.GDescDocumentationProvider"/>
-->
